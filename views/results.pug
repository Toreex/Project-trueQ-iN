extends layout

block content
    header.header.container-fluid
        .row
            .col-md-3.titleResults
              a(href='/')
                h1.title TrueQ-iN
            |             
            .col-md-6.search-header
              .row
                .col-md-4
                  select#lunch.selectpicker.form-control(data-live-search='true', title='...')
                    option Quiero
                    |                                 
                    option Tengo
                    |                                 
                    option Todo
                |                     
                .col-md-4
                  input.form-control(type='text', name='snpid', placeholder='Buscar productos...')
                |                     
                .col-md-4
                  span.input-group-btn
                    button.buttonSearch.btn.btn-warning.my-group-button(type='submit') Buscar
            |             
            .col-md-3
              .container-fluid
                a.butEntReg2.btn.btn-warning.btn-lg(href='register') Registro
                |                     
                a.butEntReg2.btn.btn-warning.btn-lg(href='enter') Entrar

    .inputResults.container
      .row
        if (products)
          each product in products
            .col-sm-6.col-md-4
              .thumbnail.productPerfil(class=product.reserved ? "product-reserved" : "")

                img(style='background-image: url('+ product.image +')')
                |                     
                .caption
                  h3 #{product.title}
                  |                         
                  p
                    | #{product.description}
                  |                         
                  p
                    a.btn.btn-primary(href=('product-info/'+ product._id), role='button', target='_blank') Mas info
            
