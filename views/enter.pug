extends layout

block content
    .container-fluid
        .row
            .divUser.col-md-6.col-md-offset-3
              form.form-horizontal(role='form', action='/login', method='POST')
                fieldset
                  legend Entrar a TrueQ-iN
                  |                         
                  .form-group
                    label.col-sm-2.control-label(for='textinput') Alias
                    |                             
                    .col-sm-10
                      input.form-control(type='text', name='username', placeholder='Alias...')
                  |                         
                  .form-group
                    label.col-sm-2.control-label(for='textinput') Password
                    |                             
                    .col-sm-10
                      input.form-control(type='password', name='password', placeholder='Password...')
                  |                         
                  .form-group
                    .col-sm-offset-2.col-sm-10
                      .pull-right       
                        button.btn.btn-success(type='submit') Entrar
