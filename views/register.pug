extends layout

block content
    header.header.container-fluid
      .row
          .col-lg-6.col-md-6.col-xs-6
            a(href='/')
              h1.title TrueQ-iN
          |             
          .col-lg-6.col-md-6.col-xs-6
            .container-fluid
              a.butEntReg.btn.btn-warning.btn-lg(href='register') Registro
              |                     
              a.butEntReg.btn.btn-warning.btn-lg(href='enter') Entrar

    .container-fluid
        .row
            .divUser.col-md-6.col-md-offset-3
              form.form-horizontal(role='form', action='/register', method='POST')
                fieldset
                  legend Registrar
                  |                         
                  .form-group
                    label.col-sm-2.control-label(for='textinput') Alias
                    |                             
                    .col-sm-10
                      input.form-control(type='text', name='username', placeholder='Alias...')
                  |                         
                  .form-group
                    label.col-sm-2.control-label(for='textinput') Email
                    |                             
                    .col-sm-10
                      input.form-control(type='mailto', name='email', placeholder='e-mail...')
                  |                         
                  .form-group
                    label.col-sm-2.control-label(for='textinput') Password
                    |                             
                    .col-sm-10
                      input.form-control(type='password', name='password', placeholder='Password...')
                  |                         
                  .form-group
                    .col-sm-offset-2.col-sm-10
                      .pull-right
                        button.btn.btn-success(href='enter', type='submit') Enviar