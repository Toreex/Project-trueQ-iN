extends layout

block content
    .container-fluid
        .row
            .divUser.col-md-6.col-md-offset-3
              form.form-horizontal(role='form', action='/register', method='POST')
                fieldset
                  legend Registrar
                  |                         
                  .form-group
                    label.col-sm-2.control-label(for='textinput') Alias
                    |                             
                    .col-sm-10
                      input.form-control(type='text', name='username', placeholder='Alias...')
                  |                         
                  .form-group
                    label.col-sm-2.control-label(for='textinput') Email
                    |                             
                    .col-sm-10
                      input.form-control(type='mail', name='email', placeholder='e-mail...')
                  |                         
                  .form-group
                    label.col-sm-2.control-label(for='textinput') Password
                    |                             
                    .col-sm-10
                      input.form-control(type='password', name='password', placeholder='Password...')
                  |                         
                  .form-group
                    .col-sm-offset-2.col-sm-10
                      .pull-right
                        button.btn.btn-success(href='enter', type='submit') Enviar