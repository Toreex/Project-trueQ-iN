extends layout

block content

    header.header.container-fluid
            .row
              .col-lg-6.col-md-6.col-xs-6
                a(href='/')
                  h1.title TrueQ-iN
              |             
              .col-lg-6.col-md-6.col-xs-6
                .container-fluid
                  ul.navbar-right
                    a.btn-lg.butEntReg.btn.btn-warning.dropdown-toggle(data-toggle='dropdown')
                      | Don Trueque85 
                      b.caret
                    |                         
                    ul.dropdown-menu
                      li
                        a(href='user-profile') Ver perfil
                      |                             
                      li
                        a(href='user-product') Subir producto
                      |                             
                      li
                        a(href='/') Salir

    .more-info.container-fluid
        .row
            .col-md-6.col-md-offset-3
              .thumbnail
                img.moreInfoImg(style='background-image: url('+ product.image +')')
                |                     
                .caption
                  h3 #{product.title}
                  |                         
                  p
                    | #{product.description}
                  |                         
                  button.btn.btn-warning(type='button', data-toggle='modal', data-target='#myModal')
                    span.glyphicon.glyphicon
                    | Mensaje
                  |                         
                  #myModal.modal.fade(role='dialog')
                    .modal-dialog
                      .modal-content.messagePadding
                        .modal-header
                          button.close(type='button', data-dismiss='modal') &times;
                          |                                         
                          h4.modal-title Enviar mensaje al usuario...
                        
                          form(method='POST', action='https://formspree.io/t_didac18@hotmail.com')
                            .form-group
                            input.inputMessage.form-control(type='email', name='email', placeholder='Your email')
                            .form-group
                            textarea.textareaMargin.form-control(name='message', placeholder='Your message')
                            |   
                            button.btn.btn-warning(type='submit') Enviar
                            a.btn.btn-warning(href='product-info', role='button') Salir